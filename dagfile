# dr recipes for justflow project

# reinstall the main dr binary locally
reinstall:
    cargo install --path . --force

# reinstall the dr-lsp server locally
reinstall-lsp:
    cargo install --path crates/dr-lsp --force

# upgrade both dr and lsp
upgrade-all: reinstall reinstall-lsp
    echo "upgraded dr and dr-lsp"

# bump version using cargo-edit
bump-version version:
    cargo set-version {{version}}

# commit version bump
commit-version version: bump-version
    git add Cargo.toml Cargo.lock
    git commit -m "bump to v{{version}}" -s

# tag the release
tag-release version: commit-version
    git tag v{{version}}

# push tag to origin
push-release version: tag-release
    git push && git push --tags

# full release workflow: bump, commit, tag, push
release version: push-release
    echo "released v{{version}}"
